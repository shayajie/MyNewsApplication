<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color"
    android:gravity="center_vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_fragment_title_icon"
            android:src="@mipmap/icon_personal_center_title"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/tv_fragment_title"
            android:textColor="@color/title_textcolor"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_fragment_title_icon"
            android:text="@string/personal_center_title"
            android:textSize="@dimen/fragment_tilte_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rel_fragment_title_notice"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_fragment_title_notice"
                android:layout_width="24dp"
                android:layout_height="17dp"
                android:src="@mipmap/icon_notice"
                android:layout_marginRight="9dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>